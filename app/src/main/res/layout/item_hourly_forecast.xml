<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_gravity="center"
    android:layout_height="match_parent"

    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="wrap_content"
        android:layout_height="135dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:outlineAmbientShadowColor="@color/colorDark"
        android:outlineSpotShadowColor="@color/colorDark"
        app:cardBackgroundColor="#C4CFDF"
        app:cardCornerRadius="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="353dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textViewhour"
                android:layout_width="127dp"
                android:layout_height="47dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:gravity="center"
                android:text="4:00"
                android:textColor="#0C0C0C"
                android:textSize="29sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imagedeshour"
                android:layout_width="135dp"
                android:layout_height="89dp"
                android:layout_marginStart="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textViewhour"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/giotnuoc" />

            <TextView
                android:id="@+id/txtdeshour"
                android:layout_width="161dp"
                android:layout_height="40dp"
                android:layout_marginStart="149dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="48dp"
                android:layout_marginBottom="10dp"
               android:textAlignment="center"
                android:text="Mưa nhẹ"  android:textStyle="bold"
                android:textSize="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/txtminhour"
                app:layout_constraintHorizontal_bias="0.347"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imagedeshour"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/txtminhour"
                android:layout_width="48dp"
                android:layout_height="42dp"
                android:layout_marginEnd="32dp"
                android:gravity="center"  android:textStyle="bold"
                android:text="11"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.831" />

            <TextView
                android:id="@+id/txtmaxhour"
                android:layout_width="48dp"
                android:layout_height="42dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="32dp"
                android:gravity="center"
                android:text="25"  android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/txtminhour"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.238" />

            <TextView
                android:id="@+id/txtdayhour"
                android:layout_width="139dp"
                android:layout_height="41dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="27dp"
                android:layout_marginBottom="44dp"
                android:gravity="center"  android:textStyle="bold"
                android:text="Thứ ,16 thg 4"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewhour"
                app:layout_constraintVertical_bias="1.0" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>