<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForecastHourlyActivity">

    <ImageView
        android:id="@+id/imagebackhour"
        android:layout_width="44dp"
        android:layout_height="39dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/txtcitynamehour"
        app:layout_constraintEnd_toStartOf="@+id/txtcitynamehour"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_baseline_arrow_back_ios_24" />

    <TextView
        android:id="@+id/txtcitynamehour"

        android:layout_width="270dp"
        android:layout_height="38dp"
        android:layout_marginTop="16dp"
        android:gravity="left"
        android:text="HO CHI MINH"
        android:textColor="@color/colorDark"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imagebackhour"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/lvtaskhour"
        android:layout_width="match_parent"
        android:layout_height="743dp"
        android:layout_margin="5dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtcitynamehour"
        app:layout_constraintVertical_bias="0.027" />
</androidx.constraintlayout.widget.ConstraintLayout>